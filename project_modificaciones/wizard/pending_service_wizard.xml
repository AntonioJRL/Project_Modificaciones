<odoo>
    <record id="view_pending_service_wizard_form" model="ir.ui.view">
        <field name="name">pending.service.wizard.form</field>
        <field name="model">pending.service.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar Avance">
                <group>
                    <group>
                        <field name="date" />
                        <field name="service_id" invisible="1" />
                    </group>
                </group>
                <notebook>
                    <page string="LÃ­neas a Procesar">
                        <field name="wizard_line_ids">
                            <tree editable="bottom" create="0" delete="1">
                                <field name="service_line_id" column_invisible="1" force_save="1" />
                                <field name="partida" force_save="1" />
                                <field name="product_id" force_save="1" />
                                <field name="quantity_original" string="Cant. Total" force_save="1" />
                                <field name="quantity_available" string="Pendiente" force_save="1" />
                                <field name="quantity_to_report" string="Cant. a Reportar" />
                                <field name="task_id" force_save="1" />
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="action_confirm" string="Registrar Avance" type="object"
                        class="btn-primary" />
                    <button string="Cancelar" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pending_service_wizard" model="ir.actions.act_window">
        <field name="name">Registrar Avance</field>
        <field name="res_model">pending.service.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>